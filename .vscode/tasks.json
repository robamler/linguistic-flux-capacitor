{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "test headless",
            "type": "shell",
            "command": "wasm-pack test --firefox --headless"
        },
        {
            "label": "wasm-pack build",
            "type": "shell",
            "command": "wasm-pack build",
            "options": {
                "cwd": "wasm"
            },
            "problemMatcher": []
        },
        {
            "type": "cargo",
            "subcommand": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "cargo bench",
            "type": "shell",
            "command": "cargo bench"
        },
        {
            "type": "npm",
            "script": "serve",
            "path": "wasm/www/",
            "options": {
                "cwd": "wasm/www"
            },
            "problemMatcher": []
        }
    ]
}
